.wrapper_with_padding
	#doc_show
		%h1.title= @doc.title
		%p= simple_format(@doc.content) 

		.buttons
			= link_to "Fix Docs", edit_doc_path(@doc), class: "button"
			= link_to "Trash It", doc_path(@doc), method: :delete, data: { comfirm: "Are you sure you want to delete document?"}, class: "button"